<div class="col-sm-12 highlight">
<h1>Listando clientes</h1>

<table class="table table-hover table-bordered">
  <thead>
    <tr>
      <th>Nombre completo</th>
      <th>Email</th>
      <th>Monto a cobrar por cita</th>
      <th>Comments</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @clients.each do |client| %>
      <tr>
        <td><%= client.full_name %></td>
        <td><%= client.email %></td>
        <td><%= client.ammount %></td>
        <td><%= client.comments %></td>
        <td><%= link_to 'Edit', edit_client_path(client) %></td>
        <td><%= link_to 'Ver arriendos', client_dates_path(client) %></td>
        <td><%= link_to 'Destroy', client, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Client', new_client_path %>
</div>
