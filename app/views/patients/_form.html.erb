<%= form_for @patient, html: {role: "form", class:"form-horizontal"} do |f| %>
  <% if @patient.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@patient.errors.count, "error") %> prohibited this patient from being saved:</h2>

      <ul>
      <% @patient.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :full_name, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
        <%= f.text_field :full_name, class: "form-control" %>
    </div>    
  </div>
  <div class="form-group">
    <%= f.label :email, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
        <%= f.email_field :email, class: "form-control" %>
    </div>    
  </div>
  <div class="form-group">
    <%= f.label :ammount, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
        <%= f.number_field :ammount, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :comments, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
        <%= f.text_area :comments, class: "form-control" %>
    </div>
  </div>
  <div class="form-group">
    <div class= "col-sm-4">&nbsp;</div>
    <%= f.submit "Crear", class: "btn col-sm-4" %>
    <div class= "col-sm-4">&nbsp;</div>
  </div>
<% end %>
